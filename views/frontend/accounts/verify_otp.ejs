<%- include('../partials/nav.ejs') %>
<main>
   <div class="mb-4 pb-4"></div>
   <section class="login-register container">
     <h2 class="d-none">Login & Register</h2>
     <ul class="nav nav-tabs mb-5" id="login_register" role="tablist">
       <li class="nav-item" role="presentation">
         <a class="nav-link nav-link_underscore active" id="login-tab" data-bs-toggle="tab" href="#tab-item-login" role="tab" aria-controls="tab-item-login" aria-selected="true">OTP Verify</a>
       </li>
     </ul>
     <div class="tab-content pt-2" id="login_register_tab_content">
       <div class="tab-pane fade show active" id="tab-item-login" role="tabpanel" aria-labelledby="login-tab">
         <div class="login-form">
          <form action="/verify_otp/<%= user._id %>" method="post" name="otp-form" class="needs-validation" novalidate>
            <div class="form-floating mb-3">
              <input name="otp" type="number" class="form-control form-control_gray" id="otpInput" placeholder="Enter OTP *" required>
              <label for="otpInput">Enter OTP *</label>
              <span>OTP sent to your email. It will expire in 5 minutes.</span>
            </div>
            <button class="btn btn-primary w-100 text-uppercase" type="submit">Verify</button>
          </form>
         </div>
       </div>
     </div>
   </section>
</main>
<%- include('../partials/footer.ejs') %>



