<%- include('../partials/nav.ejs') %>
    <div id="top" class="sa-app__body">
        <div class="mx-sm-2 px-2 px-sm-3 px-xxl-4 pb-6">
            <div class="container container--max--xl">
                <div class="py-5">
                    <div class="row g-4 align-items-center">
                        <div class="col">
                            <h1 class="h3 m-0">Category</h1>
                        </div>
                        <div class="col-auto d-flex"><a href="/admin/add_subcategories" class="btn btn-primary">Add SubCategory</a></div>
                    </div>
                </div>
                <div class="sa-entity-layout"
                    data-sa-container-query="{&quot;920&quot;:&quot;sa-entity-layout--size--md&quot;,&quot;1100&quot;:&quot;sa-entity-layout--size--lg&quot;}">
                    <div class="sa-entity-layout__body">
                        <div class="sa-entity-layout__main">
                            <div class="card">
                                <div class="card-body p-5">
                                    <div class="mb-5">
                                        <h2 class="mb-0 fs-exact-18">Add Category</h2>
                                    </div>
                                    <form action="/admin/categoriesadd" method="post">
                                        <div class="mb-4"><label for="form-category/name" class="form-label">Category
                                                Title</label><input type="text" class="form-control"
                                                id="form-category/name" name="title" value="" />
                                        </div>
                                        <div class="mb-4">
                                            <label for="form-category/slug" class="form-label">Category URL</label>
                                            <div class="input-group input-group--sa-slug">
                                                <input type="text" class="form-control" id="form-category/slug"
                                                    aria-describedby="form-category/slug-addon form-category/slug-help"
                                                    value="" name="url" />
                                            </div>
                                        </div>
                                        <button class="btn btn-primary">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-md-12 mt-5">
                        <div class="card">
                            <div class="p-4"><input type="text" placeholder="Start typing to search for categories"
                                    class="form-control form-control--search mx-auto" id="table-search" /></div>
                            <div class="sa-divider"></div>
                            <table class="sa-datatables-init" data-order="[[ 1, &quot;asc&quot; ]]"
                                data-sa-search-input="#table-search">
                                <thead>
                                    <tr>
                                        <th class="w-min" data-orderable="false"><input type="checkbox"
                                                class="form-check-input m-0 fs-exact-16 d-block" aria-label="..." />
                                        </th>
                                        <th>Categories</th>
                                        <th>Total Sub Categories</th>
                                        <th>Visibility</th>
                                        <th class="w-min" data-orderable="false"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categorys.forEach((category, index) => { %>
                                        <tr>
                                            <td><input type="checkbox" class="form-check-input m-0 fs-exact-16 d-block" aria-label="..." /></td>
                                            <td><a href="app-category.html" class="text-reset text-capitalize"><%= category.title %></a></td>
                                            <td>
                                                <% if (category.subcategories.length > 0) { %>
                                                    <%= category.subcategories.length %>
                                                <% } else { %>
                                                    0
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="badge badge-sa-success">Visible</div>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-sa-muted btn-sm" type="button" id="category-context-menu-<%= index %>" data-bs-toggle="dropdown" aria-expanded="false" aria-label="More">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="3" height="13" fill="currentColor">
                                                            <path d="M1.5,8C0.7,8,0,7.3,0,6.5S0.7,5,1.5,5S3,5.7,3,6.5S2.3,8,1.5,8z M1.5,3C0.7,3,0,2.3,0,1.5S0.7,0,1.5,0 S3,0.7,3,1.5S2.3,3,1.5,3z M1.5,10C2.3,10,3,10.7,3,11.5S2.3,13,1.5,13S0,12.3,0,11.5S0.7,10,1.5,10z">
                                                            </path>
                                                        </svg>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="category-context-menu-<%= index %>">
                                                        <li><a class="dropdown-item" href="/admin/category_edit/<%= category._id %>">Edit</a></li>
                                                        <li><a class="dropdown-item" href="#">Duplicate</a></li>
                                                        <li><a class="dropdown-item" href="#">Add tag</a></li>
                                                        <li><a class="dropdown-item" href="#">Remove tag</a></li>
                                                        <li><hr class="dropdown-divider" /></li>
                                                        <li><a class="dropdown-item text-danger" href="/admin/categories_delete/<%= category._id %>">Delete</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>